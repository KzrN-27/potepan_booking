<div class="session-new">
    <div class="session-new-contents">
        <h2>ログイン</h2>
        <div class="session-new-form">
            <%= form_with(model: @user, url: sessions_path, local: true) do |f| %>
                <%= f.label :email, "メールアドレス" %>
                <%= f.email_field :email %>
                <%= f.label :password, "パスワード" %>
                <%= f.password_field :password %>
                <%= f.submit "ログイン", class: "submit" %>
            <% end %>
            <%= link_to("新しいアカウントを作成", new_user_path ) %>
        </div>
    </div>
</div>