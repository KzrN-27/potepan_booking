<div class="profile">
    <%= render "shared/user_left" %>
    <div class="profile-contents">
        <div class="profile-box">
            <div class="row"><h2>プロフィール</h2></div>
            <div class="row">
                <% if @user.image? %>
                    <%= image_tag @user.image.url, class: "icon" %>
                <% else %>
                    <%= image_tag "default_icon.jpg", :size => "64x64", class: "icon" %>
                <% end %>
            </div>
            <%= form_with(model: @user, local: true) do |f| %>
                <div class="row">
                    <%= f.label :image, "アイコン画像" %>
                    <%= f.file_field :image %>
                </div>
                <div class="row">
                    <%= f.label :name, "名前" %>
                    <%= f.text_field :name, class: "text_field" %>
                </div>
                <div class="row introduce">
                    <%= f.label :introduce, "自己紹介" %>
                    <%= f.text_area :introduce, class: "text_area" %>
                </div>
                <div class="row">
                    <%= f.submit "更新", class: "submit" %>
                </div>
            <% end %>
    </div>
</div>